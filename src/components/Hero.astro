---
import { Image } from "astro:assets";
import LinkedInLogo from "../images/LinkedIn_icon.svg";
import ArrowForwardIcon from "../images/icons/arrow_forward.svg";
---

<section>
  <div class="container hero">
    <div class="about">
      <h1>Ruairidh Cavaye</h1>
      <h2>(Just a) Front-end Developer</h2>
      <p>Some text here</p>
      <a href="https://www.linkedin.com/in/ruairidhcavaye/">
        <Image width="32" src={LinkedInLogo} alt="Go to my LinkedIn Profile" />
      </a>
      <a href="#about" class="button"
        >More about me <Image height="18" src={ArrowForwardIcon} alt="" /></a
      >
    </div>
  </div>
</section>

<style>
  h1 {
    font-size: clamp(2.25rem, 8vw, 3rem);
    font-weight: normal;
    line-height: 1;
  }

  h2 {
    font-weight: normal;
    font-size: 1.5rem;
  }
  section {
    background: radial-gradient(
      circle at bottom left,
      rgb(var(--primary-color)) 0,
      rgba(var(--primary-color), 75%) 100%
    );
    color: white;
    height: 600px;
    display: grid;
    align-items: center;
  }

  .headshot {
    height: fit-content;
    width: fit-content;
    max-height: 300px;
    max-width: 300px;
    aspect-ratio: auto;
    border-radius: 100%;
    object-fit: cover;
  }
  .hero {
    display: flex;
    gap: 1rem;
  }

  .about {
    display: grid;
    gap: 1rem;
  }

  @media screen and (max-width: 550px) {
    h2 {
      font-size: 1.25rem;
    }
  }

  button {
    border: solid white 1px;
    background: none;
    color: inherit;
    width: fit-content;
    padding: 0.75em 1em;
    display: flex;
    gap: 0.25rem;
    align-items: center;
  }

  button:hover,
  button:focus-visible {
    background: hsl(from rgb(var(--primary-color)) h s 20%);
  }
</style>
